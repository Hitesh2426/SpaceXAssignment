<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/white_20r_bg"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/rocketImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="5dp"
            android:elevation="@dimen/_2sdp"
            android:background="@color/shimmer_placeholder"
            />
        <TextView
            android:id="@+id/nameHeadTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/rocketImg"
            app:layout_constraintStart_toEndOf="@id/rocketImg"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/font_semibold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/shimmer_placeholder"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/countryHeadTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nameHeadTxt"
            app:layout_constraintStart_toEndOf="@id/rocketImg"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/font_semibold"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/engineCountHeadTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/countryHeadTxt"
            app:layout_constraintStart_toEndOf="@id/rocketImg"
            android:background="@color/shimmer_placeholder"
           app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/font_semibold"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/engineCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/engineCountHeadTxt"
            app:layout_constraintBottom_toBottomOf="@id/engineCountHeadTxt"
            android:text="1"
            app:layout_constraintStart_toEndOf="@id/engineCountHeadTxt"
            android:fontFamily="@font/font_regular"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/getDetailsBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/shimmer_placeholder"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.307"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rocketImg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>